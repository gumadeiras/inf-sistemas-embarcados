<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ize.android.btree.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    card_view:cardUseCompatPadding="true"
                    android:background="@color/cardview_light_background"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Only Insert"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">

                            <Button
                                android:id="@+id/button"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.60"
                                android:onClick="avl_insert"
                                android:text="AVL" />

                            <Spinner
                                android:id="@+id/spinner"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/array_name"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">

                            <Button
                                android:id="@+id/button2"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.60"
                                android:onClick="rb_insert"
                                android:text="RB" />

                            <Spinner
                                android:id="@+id/spinner2"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/array_name"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>











                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    card_view:cardUseCompatPadding="true"
                    android:background="@color/cardview_light_background"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2b"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Insert One Search One"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">

                            <Button
                                android:id="@+id/buttonb"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.60"
                                android:onClick="avl_insert_search_one"
                                android:text="AVL" />

                            <Spinner
                                android:id="@+id/spinnerb"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/array_name"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">

                            <Button
                                android:id="@+id/button2b"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.60"
                                android:onClick="rb_insert_search_one"
                                android:text="RB" />

                            <Spinner
                                android:id="@+id/spinner2b"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/array_name"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>







                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    card_view:cardUseCompatPadding="true"
                    android:background="@color/cardview_light_background"
                    card_view:cardElevation="4dp"
                    card_view:cardCornerRadius="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView2c"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="8dp"
                            android:text="Insert All Search All"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">

                            <Button
                                android:id="@+id/buttonc"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.60"
                                android:onClick="avl_insert_search_all"
                                android:text="AVL" />

                            <Spinner
                                android:id="@+id/spinnerc"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/array_name"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="8dp">

                            <Button
                                android:id="@+id/button2c"
                                style="@style/Widget.AppCompat.Button.Colored"
                                android:layout_width="10dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.60"
                                android:onClick="rb_insert_search_all"
                                android:text="RB" />

                            <Spinner
                                android:id="@+id/spinner2c"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/array_name"
                                android:layout_weight="1" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
